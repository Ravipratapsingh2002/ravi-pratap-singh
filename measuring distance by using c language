#include<stdio.h>
#include<conio.h>
#include<math.h>

int main()
{
int x1,y1,x2,y2,radius;
float pc;

 printf("Enter the center co-ordinate (X)of the circle:");
    scanf("%d",&x1);

    printf("Enter the center co-ordinates(Y) of the circle:");
    scanf("%d",&y1);
    printf("Enter the radius of the circle:");
    scanf("%d", &radius);
    printf("Enter the point(X) co-ordintes:");
      scanf("%d",&x2);
    printf("Enter the point(y) co-ordintes:");
    scanf("%d",&y2);
    //check for distance between point and center point of circle
    pc = sqrt(pow (x2-x1,2)+pow(y2-y1,2));
    if(pc>radius)
    printf("point (%d,%d lies outside the circle",x2,y2);
    else if(pc<radius)
    printf("point(%d,%d)lies inside circle",x2,y2);
else if(pc==radius)
printf("point(%d,%d) lies on the boundry of circle",x2,y2);
else
printf("Wrong Entry");
    return 0;
}










